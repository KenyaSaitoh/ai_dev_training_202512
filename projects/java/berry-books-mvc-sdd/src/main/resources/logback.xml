<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========================================
         Berry Books Logging Configuration
         ========================================
         - ログレベル: INFO (本番環境想定)
         - 出力先: コンソール、ファイル
         - ログフォーマット: INFO  [ ClassName#methodName ] message
         ======================================== -->

    <!-- ========================================
         アペンダー: コンソール出力
         ======================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level [ %logger{36}#%method ] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================
         アペンダー: ファイル出力
         ======================================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/berry-books.log</file>
        
        <!-- ローリングポリシー: 日次ローテーション -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/berry-books-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 30日間保持 -->
            <totalSizeCap>1GB</totalSizeCap> <!-- 合計1GBまで -->
        </rollingPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [ %logger{36}#%method ] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================
         パッケージ別ログレベル設定
         ======================================== -->
    
    <!-- アプリケーションパッケージ: INFO -->
    <logger name="pro.kensait.berrybooks" level="INFO"/>
    
    <!-- EclipseLink JPA: WARN（必要に応じてDEBUGに変更） -->
    <logger name="org.eclipse.persistence" level="WARN"/>
    
    <!-- Payara Server: WARN -->
    <logger name="fish.payara" level="WARN"/>
    
    <!-- Jakarta Faces: WARN -->
    <logger name="jakarta.faces" level="WARN"/>
    
    <!-- Hibernate Validator: WARN -->
    <logger name="org.hibernate.validator" level="WARN"/>

    <!-- ========================================
         ルートロガー
         ======================================== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
